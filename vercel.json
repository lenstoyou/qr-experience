{
  "version": 2,
  "builds": [
    { "src": "web/index.js",               "use": "@vercel/node"  },
    { "src": "web/frontend/dist/**/*",     "use": "@vercel/static" }
  ],
  "routes": [
    // 1) Serverless function for all API + auth + root paths
    { "src": "/(api|auth|_next|\\?)?(.+)?", "dest": "web/index.js" },

    // 2) Fallback to static assets for your frontâ€‘end dist folder 
    { "src": "/(.*)",                      "dest": "web/frontend/dist/$1" }
  ]
}