{
  "version": 2,
  "builds": [
    { "src": "web/index.js",               "use": "@vercel/node" },
    { "src": "web/frontend/package.json",  "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)",                  "dest": "web/index.js" },
    { "src": "/$",                         "dest": "web/frontend/dist/index.html" },
    { "src": "/(.*)",                      "dest": "web/frontend/dist/$1" }
  ]
}