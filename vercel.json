{
  "version": 2,
  "builds": [
    { "src": "web/index.js",              "use": "@vercel/node" },
    {
      "src": "web/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    // all /api/* hits your function
    { "src": "/api/(.*)",  "dest": "web/index.js" },
    { "src": "/auth/(.*)", "dest": "web/index.js" },
    // fall through to filesystem for assets
    { "handle": "filesystem" },
    // everything else back to your function (SPA + embedded Shopify)
    { "src": "/(.*)",      "dest": "web/index.js" }
  ]
}